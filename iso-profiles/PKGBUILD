# Maintainer: artoo <artoo@cromnix.org>

pkgbase=iso-profiles
pkgname=('artools-iso-base'
        'artix-iso-profiles')
pkgver=0.2
pkgrel=1
arch=('any')
url="https://github.com/artix-linux/iso-profiles"
license=('GPL')
source=("${pkgbase}-${pkgver}.tar.gz::$url/archive/${pkgver}.tar.gz")
sha256sums=('')

_inst_dir(){
    install -d $pkgdir/usr/share/artools/iso-profiles
    cp -a $srcdir/iso-profiles/$1 $pkgdir/usr/share/artools/iso-profiles/
}

package_artools-iso-base() {
    pkgdesc='Artix iso profiles base'

    _inst_dir 'shared'
    install -m644 $srcdir/iso-profiles/repo_info $pkgdir/usr/share/artools/iso-profiles/
}

package_artix-iso-profiles() {
    pkgdesc='Artix iso profiles'
    groups=('artools')
    depends=("artools-yaml>=${pkgver}")

    _inst_dir 'lxqt'
#     _inst_dir 'cinnamon'
}
